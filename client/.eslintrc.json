{
   "extends": [
      "react-app",
      "react-app/jest",
      "plugin:cypress/recommended"
   ],
   "rules": {
      "no-console": "warn",
      "arrow-parens": [
         "warn",
         "as-needed"
      ],
      "jsx-quotes": [
         "error",
         "prefer-double"
      ],
      "semi": [
         "warn",
         "always"
      ],
      "prefer-const": [
         "warn",
         {
            "destructuring": "all",
            "ignoreReadBeforeAssign": false
         }
      ],
      "indent": [
         "error",
         3
      ],
      "comma-dangle": [
         "warn",
         "always-multiline"
      ],
      "max-len": [
         "warn",
         {
            "code": 150,
            "ignoreUrls": true,
            "ignorePattern": "import"
         }
      ],
      "eol-last": [
         "warn",
         "always"
      ],
      "react/jsx-curly-spacing": [
         "warn",
         {
            "when": "always",
            "children": true,
            "spacing": {
               "objectLiterals": "never"
            }
         }
      ],
      "object-curly-spacing": [
         "warn",
         "always"
      ],
      "no-useless-escape": "off",
      "react-hooks/exhaustive-deps": "off",
      "testing-library/no-debugging-utils": "warn",
      "testing-library/await-async-utils": "off"
   }
}
